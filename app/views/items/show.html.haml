= render "header"
.main
  .main__show-main
    .main__show-main__content-right
      .main__show-main__content-right__top-content
        .main__show-main__content-right__top-content__item-box
          %h2.main__show-main__content-right__top-content__item-box__name product3
          .main__show-main__content-right__top-content__item-box__body
            %ul.main_image
              %li.main_photo
                = image_tag asset_path('material/show/main.png'), size: "560x346"
                %ul.show_index
                  %li.show_index__content
                    = image_tag asset_path('material/show/index1.png'), size: "130x87", class: "png"
                  %li.show_index__content
                    = image_tag asset_path('material/show/index2.png'), size: "130x87", class: "png"
                  %li.show_index__content
                    = image_tag asset_path('material/show/index3.png'), size: "130x87", class: "png"
          .main__show-main__content-right__top-content__item-box__price
            %span.font-size ¥
            = @item.price_id
            .main__show-main__content-right__top-content__item-box__price__detail
              %span.tax （税込）
              %span.derivery-fee 送料込み
          .main__show-main__content-right__top-content__item-box__item-detail
            = @item.explanation
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td yurie
                %tr
                  %th カテゴリー
                  %td
                    = link_to "#" do
                      %span ベビー・キッズ
                    %br  
                    = link_to "#" do
                      %span ベビー服（男女兼用）　~95cm
                    %br
                    = link_to "#" do
                      %span アウター
                %tr
                  %th ブランド
                  %td 
                %tr
                  %th 商品のサイズ
                  %td
                %tr
                  %th 商品の状態
                  %td 未使用に近い
                %tr
                  %th 配送料の負担
                  %td 送料込み（出品者負担）
                %tr
                  %th 発送元の地域
                  %td
                    = link_to "#" do
                      岩手県
                %tr
                  %th 発送日の目安
                  %td 
                    = @item.days_untill_shipping.name
      %ul.main__show-main__content-right__top-content__links
        %li
          = link_to "#" do
            %i.fa.angele-left
            .item-link < 前の商品
        %li
          = link_to "#" do
            .item-link 後ろの商品 >
            %i.fa.angele-right
      .related-items
        = link_to "#" do
          %span ベビーキッズをもっと見る
        .product-lists
= render "footer"

      t.string :name, null: false
      t.integer :price_id, null: false
      t.text :explanation, null: false
      t.bigint :category_id, foreign_key: true
      t.integer :size_id
      # t.references :brand, foreign_key: true
      t.integer :condition_id, null: false
      t.integer :derivery_fee_id, null: false
      t.integer :shipping_area_id, null: false
      t.integer :days_untill_shipping_id, null: false
      t.integer :status_id