.sell
  %header.sell__header
    = image_tag 'material/logo/logo.png'
  .sell__content
    .sell__content__box
      .sell__content__box__image
        .sell__content__box__image__frame
          .sell__content__box__image__frame__name.titel
            出品画像
            %span.required 必須
          %p.sell__content__box__image__frame__comment 最大10枚までアップロードできます
          .sell__content__box__image__frame__box
            %label{class: "sell__content__box__image__frame__box__label"}
              .sell__content__box__image__frame__box__label__btn
                %p.sell__content__box__image__frame__box__label__btn__comment
                = image_tag 'material/icon/icon_camera.png'
                %p ドラックアンドドロップまたはクリックしてファイルをアップロード
              %input{type: "file"}
      .sell__content__box__product
        .sell__content__box__product__frame
          .sell__content__box__product__frame__name.titel
            商品名
            %span.required 必須
          .sell__content__box__product__frame__input
            %input.sell__content__box__product__frame__input__text{placeholder: "40字まで"}
        .sell__content__box__product__frame2
          .sell__content__box__product__frame2__name.titel
            商品の説明
            %span.required 必須
          .sell__content__box__product__frame2__text
            %textarea.sell__content__box__product__frame2__text__area{placeholder: "商品の説明(必須1,000文字以内)\n(色、素材、重さ、定価、注意点など)\n\n例)2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"}
      .sell__content__box__the-details
        .sell__content__box__the-details__title
          商品の詳細
        .sell__content__box__the-details__category
          .sell__content__box__the-details__category__name.titel
            カテゴリー
            %span.required 必須
          .sell__content__box__the-details__category__select
            %select.sell__content__box__the-details__category__select__box
              %option 選択してください
              %option{:value => "0"} レディース
              %option{:value => "1"} メンズ
              %option{:value => "2"} ベビー・キッズ
              %option{:value => "3"} インテリア・住まい・小物
              %option{:value => "4"} 本・音楽・ゲーム
              %option{:value => "5"} おもちゃ・ホビー・グッズ
              %option{:value => "6"} コスメ・香水・美容
              %option{:value => "7"} 家電・スマホ・カメラ
              %option{:value => "8"} スポーツ・レジャー
              %option{:value => "9"} ハンドメイド
              %option{:value => "10"} チケット
              %option{:value => "11"} 自動車・オートバイ
              %option{:value => "12"} その他
        .sell__content__box__the-details__brand
          .sell__content__box__the-details__brand__name.titel
            ブランド
            %span.any 任意
          .sell__content__box__the-details__brand__select
            %input.sell__content__box__the-details__brand__select__box{placeholder: "例）シャネル"}
        .sell__content__box__the-details__status
          .sell__content__box__the-details__status__name.titel
            商品の状態
            %span.required 必須
          .sell__content__box__the-details__status__select
            %select.sell__content__box__the-details__status__select__box
              %option 選択してください
              %option{:value => "0"} 新品、未使用
              %option{:value => "1"} 未使用に近い
              %option{:value => "2"} 目立った傷や汚れなし
              %option{:value => "3"} やや傷や汚れあり
              %option{:value => "4"} 傷や汚れあり
              %option{:value => "5"} 全体的に状態が悪い
      .sell__content__box__delivery
        .sell__content__box__delivery__title
          配送について
        .sell__content__box__delivery__burden
          .sell__content__box__delivery__burden__name.titel
            配送料の負担
            %span.required 必須
          .sell__content__box__delivery__burden__select
            %select.sell__content__box__delivery__burden__select__box
              %option 選択してください
              %option{:value => "0"} 送料込み（出品者負担）
              %option{:value => "1"} 着払い（購入者負担）
        .sell__content__box__delivery__area
          .sell__content__box__delivery__area__name.titel
            発送元の地域
            %span.required 必須
          .sell__content__box__delivery__area__select
            %select.sell__content__box__delivery__area__select__box
              %option 選択してください
              %option{:value => "0"} 北海道
              %option{:value => "1"} 青森県
              %option{:value => "2"} 岩手県
              %option{:value => "3"} 宮城県
              %option{:value => "4"} 秋田県
              %option{:value => "5"} 山形県
              %option{:value => "6"} 福島県
              %option{:value => "7"} 茨城県
              %option{:value => "8"} 栃木県
              %option{:value => "9"} 群馬県
              %option{:value => "10"} 埼玉県
              %option{:value => "11"} 千葉県
              %option{:value => "12"} 東京都
              %option{:value => "13"} 神奈川県
              %option{:value => "14"} 新潟県
              %option{:value => "15"} 富山県
              %option{:value => "16"} 石川県
              %option{:value => "17"} 福井県
              %option{:value => "18"} 山梨県
              %option{:value => "19"} 長野県
              %option{:value => "20"} 岐阜県
              %option{:value => "21"} 静岡県
              %option{:value => "22"} 愛知県
              %option{:value => "23"} 三重県
              %option{:value => "24"} 滋賀県
              %option{:value => "25"} 京都府
              %option{:value => "26"} 大阪府
              %option{:value => "27"} 兵庫県
              %option{:value => "28"} 奈良県
              %option{:value => "29"} 和歌山県
              %option{:value => "30"} 鳥取県
              %option{:value => "31"} 島根県
              %option{:value => "32"} 岡山県
              %option{:value => "33"} 広島県
              %option{:value => "34"} 山口県
              %option{:value => "35"} 徳島県
              %option{:value => "36"} 香川県
              %option{:value => "37"} 愛媛県
              %option{:value => "38"} 高知県
              %option{:value => "39"} 福岡県
              %option{:value => "40"} 佐賀県
              %option{:value => "41"} 長崎県
              %option{:value => "42"} 熊本県
              %option{:value => "43"} 大分県
              %option{:value => "44"} 宮崎県
              %option{:value => "45"} 鹿児島県
              %option{:value => "46"} 沖縄県
              %option{:value => "47"} 未定
        .sell__content__box__delivery__days
          .sell__content__box__delivery__days__name.titel
            発送までの日数
            %span.required 必須
          .sell__content__box__delivery__days__select
            %select.sell__content__box__delivery__days__select__box
              %option 選択してください
              %option{:value => "0"} 1~2日で発送
              %option{:value => "1"} 2~3日で発送
              %option{:value => "2"} 4~7日で発送
      .sell__content__box__selling-price
        .sell__content__box__selling-price__name
          価格（¥300〜9,999,999）
        .sell__content__box__selling-price__price
          .sell__content__box__selling-price__price__name.titel
            販売価格
            %span.required 必須
            .sell__content__box__selling-price__price__name__input
              ¥
              %input{placeholder: "0"}
          .sell__content__box__selling-price__price__fee
            -# 販売手数料（10%）
          .sell__content__box__selling-price__price__profit
            -# 販売利益
      .sell__content__box__sales-profit
        .sell__content__box__sales-profit__btn
          %input.submit-btn{type:"submit",value:"出品する"}
          = link_to "もどる","#",class: "btn"
        .sell__content__box__sales-profit__text
          禁止されている 
          = link_to "行為","#"
          および
          = link_to "出品物","#"
          を必ずご確認ください。
          = link_to "偽ブランド品","#"
          や
          = link_to "盗品物","#"
          などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして
          = link_to "加盟店規約","#"
          に同意したことになります。
