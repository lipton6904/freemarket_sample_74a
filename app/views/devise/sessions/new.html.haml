.wrapper
  .contents
    .contents__row
      %p アカウントをお持ちではない方はこちら
      = link_to '新規会員登録',  new_user_registration_path, class:'contents__row--btn'
    .login-form
      = form_with model: @user, url: user_session_path, local: true  do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'メールアドレス ', class:'field__box'
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder:'パスワード', class:'field__box'
          .actions
            = f.submit "ログイン", class:'actions__btn'








