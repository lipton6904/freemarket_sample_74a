.content
  %header
    = render 'mypage/my-page-header'
  .main-content
    .right-content
      .right-content__container
        %h2.right-content__container__head
          発送元・お届け先住所変更
        .right-content__container__box
          .right-content__container__box__form
            .right-content__container__box__form__group
              %label.right-content__container__box__form__group__label　お名前
              %span.right-content__container__box__form__group__span 必須
              %input.right-content__container__box__form__group__input{type:"text", placeholder:"例）山田"}
              %input.right-content__container__box__form__group__input{type:"text", placeholder:"例）太郎"}
            .right-content__container__box__form__group
              %label.right-content__container__box__form__group__label　お名前カナ
              %span.right-content__container__box__form__group__span 必須
              %input.right-content__container__box__form__group__input{type:"text", placeholder:"例）ヤマダ"}
              %input.right-content__container__box__form__group__input{type:"text", placeholder:"例）タロウ"}
            .right-content__container__box__form__group
              %label.right-content__container__box__form__group__label　郵便番号
              %span.right-content__container__box__form__group__span 必須
              %input.right-content__container__box__form__group__input{type:"text", placeholder:"例）123-4567", maxlength:"8"}
            .right-content__container__box__form__group
              %label.right-content__container__box__form__group__label　都道府県
              %span.right-content__container__box__form__group__span 必須
